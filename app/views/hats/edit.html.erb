<div class = "container">
  <div class = "jumbotron">
  <h1> Edit Your Hat </h1>
<%= form_for @hat do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :brand %>
  <%= f.text_field :brand %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :color %>
  <%= f.text_field :color %>

  <%= f.hidden_field :user_id, value: 1 %>

  <%= f.submit %>

<% end %>
  </div>
</div>
